<script language="javascript"> function capital()
{
var cunt=document.forms["frm1"].country.value; var capital=" Please select any country ";
if(cunt=="INDIA")
{
capital="NEWDELHI";
}
if(cunt=="USA")
{
capital="WASHINGTONDC";
}
if(cunt=="NETHERLANDS")
{
    capital="AMSTERDAM";
    }
    if(cunt=="RUSSIA")
    {
    capital="MOSCOW";
    }
    if(cunt=="JAPAN")
    {
    capital="TOKYO";
    }
    if(cunt=="select")
    {
    capital="PleaseselectanyCountry";
    }
    document.getElementById("capt").innerHTML=capital;
    }
    </script>
