<div onmousedown="mDown(this)" onmouseup="mUp(this)"style="background-color:#D94A38;width:90px;height:20px;padding:40px;">Click Me</div>
<script>
function mDown(obj)
{ obj.style.backgroundColor="green"; obj.innerHTML = "Release Me";}
function mUp(obj) 
{ obj.style.backgroundColor="blue"; obj.innerHTML="Thank You";}
</script>
</body>
